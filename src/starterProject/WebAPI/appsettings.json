{
  "AppName": "User Managament Application",
  "AllowedHosts": "*",
  // Güvenlik ve Yetkilendirme
  "AuthorizationSettings": {
    "AdminRole": "Admin",
    "UserRole": "User",
    "TokenExpiryDays": 1
  },

  "Logging": { // Logging sadece konsolda görünür. şu şekilde çıktı verir: 2023-10-05 12:35:45.678 [Error] DisasterRecoveryService: Yedekleme hatası - Connection timeout
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "System": "Error"
    }
  },

  "LoggingConfig": { //LoggingConfig logların dosyaya yada veritabanına yada her ikisine yazılmasını sağlar.
    "DefaultLogLevel": "Information",
    "Override": {
      "Microsoft.AspNetCore": "Warning"
    },
    "Target": "All" // All, File, Database
  },

  "Backup": {
    "Directory": "c:\\app",
    "EncryptionKey": "", // Bu alan LocalSecretsManager ile doldurulacak
    "RetentionDays": 30
  },
  "Emergency": {
    "NotificationRecipients": "",
    "SmtpServer": "", // Bu alan LocalSecretsManager ile doldurulacak
    "SmtpPort": 465,
    "SmtpUser": "", // Bu alan LocalSecretsManager ile doldurulacak
    "SmtpPass": "", // Bu alan LocalSecretsManager ile doldurulacak
    "SmsApiUrl": "", // Bu alan LocalSecretsManager ile doldurulacak
    "SmsApiKey": "" // Bu alan LocalSecretsManager ile doldurulacak
  },

  "Firebase": {
    "CredentialPath": "firebase-credentials.json",
    "CredentialJson": null // Veya JSON içeriği doğrudan yapıştırılabilir
  },

  "ConnectionStrings": {
    "BaseDb": ""
  },

  "CacheSettings": {
    "SlidingExpiration": 2
  },

  "ElasticSearchConfig": {
    "ConnectionString": "http://localhost:9200",
    "Password": "",
    "UserName": ""
  },

  "CloudinaryAccount": {
    "ApiKey": "",
    "ApiSecret": "", //Bu alan LocalSecretsManager ile doldurulacak
    "Cloud": ""
  },

  "AmazonConfiguration": {
    "AccessKey": "",
    "SecretKey": ""
  },

  "SeriLogConfigurations": {
    "FileLogConfiguration": {
      "FolderPath": "/logs/"
    },
    "MSTeamsConfiguration": {
      "ChannelHookAdress": ""
    },
    "ElasticSearchConfiguration": {
      "ConnectionString": "http://localhost:9200"
    },
    "GraylogConfiguration": {
      "HostnameOrAddress": "localhost",
      "Port": 12201
    },
    "RabbitMQConfiguration": {
      "Exchange": "test_exchange",
      "ExchangeType": "fanout",
      "Hostnames": [
        "localhost"
      ],
      "Password": "guest",
      "Port": 5672,
      "RouteKey": "Logs",
      "Username": "guest"
    }
  }
}