{
  "AppName": "User Managament Application",
  "AllowedHosts": "*",
  // Güvenlik ve Yetkilendirme
  "AuthorizationSettings": {
    "AdminRole": "Admin",
    "UserRole": "User",
    "TokenExpiryDays": 1
  },
  "Logging": { // Logging sadece konsolda görünür. şu şekilde çıktı verir: 2023-10-05 12:35:45.678 [Error] DisasterRecoveryService: Yedekleme hatası - Connection timeout
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "System": "Error"
    }
  },
  "LoggingConfig": { //LoggingConfig logların dosyaya yada veritabanına yada her ikisine yazılmasını sağlar.
    "DefaultLogLevel": "Information",
    "Override": {
      "Microsoft.AspNetCore": "Warning"
    },
    "Target": "All" // All, File, Database
  },
  "Backup": {
    "Directory": "c:\\app",
    "EncryptionKey": "fixed-production-backup-key-2024", // Bu alan LocalSecretsManager ile doldurulacak
    "RetentionDays": 30
  },
  "Emergency": {
    "NotificationRecipients": "",
    "SmtpServer": "smtp.gmail.com", // Bu alan LocalSecretsManager ile doldurulacak
    "SmtpPort": 465,
    "SmtpUser": "your-email@gmail.com", // Bu alan LocalSecretsManager ile doldurulacak
    "SmtpPass": "your-app-password", // Bu alan LocalSecretsManager ile doldurulacak
    "SmsApiUrl": "https://api.smsprovider.com/send", // Bu alan LocalSecretsManager ile doldurulacak
    "SmsApiKey": "your-sms-api-key" // Bu alan LocalSecretsManager ile doldurulacak
  },
  "ConnectionStrings": {
    "BaseDb": ""
  },
  "CacheSettings": {
    "SlidingExpiration": 2
  },

  "ElasticSearchConfig": {
    "ConnectionString": "http://localhost:9200",
    "Password": "",
    "UserName": ""
  },

  "CloudinaryAccount": {
    "ApiKey": "",
    "ApiSecret": "", //Bu alan LocalSecretsManager ile doldurulacak
    "Cloud": ""
  },

  "AmazonConfiguration": {
    "AccessKey": "<accessKeyHere>",
    "SecretKey": "<secretKeyHere>"
  },

